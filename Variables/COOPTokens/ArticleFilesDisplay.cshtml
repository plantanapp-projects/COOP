@inherits avt.MyTokens.Core.ParsingEngine.RazorTemplate
@{
 var ArticleFiles = COOPTokens.ArticleFiles(ArticleId:TknParams.ArticleId.Value.ToString(),ArticleChangeId:TknParams.ArticleChangeId.Value.ToString());
 var numOfFiles = ArticleFiles.Count();
}

    <h5>@numOfFiles Files</h5>

    <div class="files-wrapper">
          @foreach(var f in ArticleFiles){
                <a class="f-item" href=#>
          		    <p>@f.FileName</p>
          	    </a>
            }
        
    </div>