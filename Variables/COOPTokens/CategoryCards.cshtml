@inherits avt.MyTokens.Core.ParsingEngine.RazorTemplate
@{
 var Categories = COOPTokens.CategoryTypes();
}

    <h1>
        Choose a Category
    </h1>

<div class="cat-wrapper">
    

    @foreach(var n in Categories) {
    
     <a class="cat-item" href="/Articles/AllArticles?filter-ArticleType=@n.Name">
       	<div class="cat__item" >
      		<p>@n.Name</p>
      	</div>
     </a>
    
    }
    
